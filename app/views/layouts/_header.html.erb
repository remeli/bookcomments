<div class="row" id="header">
  <div class="six columns" >
    <div id="main-title">
      <a href="/"><%= image_tag "logo2.png" %></a>
    </div>
  </div>
  <div class="six columns" id="search">
    <%= form_tag "/search", :method => :get, :class => "nice custom" do %>
      <%= text_field_tag :keyword, nil, :id => "search_text", :placeholder => "The Тёлки..." %>
      <select name="topic" id="form-list-search">
        <option SELECTED value="books">книги</option>
        <option value="authors">авторы</option>
        <option value="articles">разное</option>
      </select>
      <%= submit_tag "Поиск", :id => "submit-search", :class => "small white nice button radius" %>
    <% end %>
  </div>
</div>